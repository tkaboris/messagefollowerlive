 <div class="row">
  <div class="col-md-4 col-md-offset-4 center">

    <hr/>
  </div>
</div>



 <h2><%= @speaker.name %><%= @speaker.lastname %>
  <%= link_to "Subscribe to this Speaker", subscribe_speaker_path(@speaker), class: "btn btn-default btn-xs" %>
  <p>




  <% @messages.each do |m| %>
  <h4><%= link_to m.title, message_path(m) %></h4>


  </p>
</h2>
<% end %>

 <% @speaker.attachments.each do |attachment| %>
  <%= link_to attachment.file_file_name, download_speakers_path(:attachment_id => attachment.id) %>
 <% end %>
